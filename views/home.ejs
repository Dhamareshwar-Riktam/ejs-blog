<%- include("partials/header" ); -%>
    <h1>Home</h1>
    <p>
        <%= startingContent %>
    </p>
    <% posts.map(post=> { %>
        <h2>
            <%= post.title %>
        </h2>
        <p>
            <% if (post.body.length> 100) { %>
                <%= post.body.substring(0, 100) + "... " %> <a href="posts/<%= post.title %>">Read More</a>
                    <% } else {%>
                        <%= post.body %>
                            <% } %>
        </p>
        <% }) %>
            <%- include("partials/footer"); -%>